{
  "name": "mario-charts-workspace",
  "version": "0.2.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "description": "Modern React component library focused on charts and dashboards with beautiful visuals out-of-the-box",
  "repository": {
    "type": "git",
    "url": "https://github.com/yuribodo/mariocharts.git"
  },
  "homepage": "https://github.com/yuribodo/mariocharts",
  "bugs": {
    "url": "https://github.com/yuribodo/mariocharts/issues"
  },
  "keywords": [
    "react",
    "charts",
    "dashboard",
    "components",
    "typescript",
    "tailwind"
  ],
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "npm run build:cli && next build --turbopack",
    "build:cli": "npm run build --workspace=packages/cli",
    "dev:cli": "npm run dev --workspace=packages/cli",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@phosphor-icons/react": "^2.1.10",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-popover": "^1.1.4",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slider": "^1.2.2",
    "@radix-ui/react-tooltip": "^1.1.6",
    "@tabler/icons-react": "^3.34.1",
    "@types/prismjs": "^1.26.5",
    "canvas-confetti": "^1.9.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "flubber": "^0.4.2",
    "framer-motion": "^11.11.17",
    "gsap": "^3.14.2",
    "howler": "^2.2.4",
    "lucide-react": "^0.468.0",
    "next": "15.5.9",
    "next-themes": "^0.3.0",
    "prismjs": "^1.30.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "recharts": "^2.12.7",
    "shiki": "^3.11.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/nextjs": "^8.4.7",
    "@storybook/react": "^8.4.7",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/canvas-confetti": "^1.9.0",
    "@types/howler": "^2.2.12",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.7",
    "typescript": "^5"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  }
}
